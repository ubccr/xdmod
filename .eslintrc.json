{
  "extends": "airbnb-base/legacy",
  "env": {
    "browser": false,
    "node": false
  },
  "globals": {},
  "rules": {
    "curly": [
      "error",
      "all"
    ],
    "brace-style": [
      "error",
      "1tbs",
      {
        "allowSingleLine": false
      }
    ],
    "no-implicit-coercion": [
      "error",
      {
        "boolean": true,
        "number": true,
        "string": false
      }
    ],
    "consistent-this": [
      "warn",
      "self"
    ],
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1,
        "VariableDeclarator": 1,
        "outerIIFEBody": 1,
        "FunctionDeclaration": {
          "parameters": 1,
          "body": 1
        },
        "FunctionExpression": {
          "parameters": 1,
          "body": 1
        }
      }
    ],
    "func-names": "off",
    "vars-on-top": "off",
    "new-cap": [
      "error",
      {
        "newIsCap": true,
        "newIsCapExceptions": [],
        "capIsNew": false,
        "capIsNewExceptions": [
          "Immutable.Map",
          "Immutable.Set",
          "Immutable.List"
        ],
        "properties": false
      }
    ],
    "max-len": [
      "error",
      512,
      4,
      {
        "ignoreUrls": true,
        "ignoreComments": false,
        "ignoreRegExpLiterals": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "no-continue": "off",
    "no-plusplus": "off",
    "no-prototype-builtins": "off"
  }
}
