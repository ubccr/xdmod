{
    "table_definition": {
        "name": "schema_version_history",
        "engine": "MyISAM",
        "columns": [
            {
                "name": "database_name",
                "type": "char(64)",
                "nullable": false
            },
            {
                "name": "schema_version",
                "type": "char(64)",
                "nullable": false
            },
            {
                "name": "action_datetime",
                "type": "datetime",
                "nullable": false

            },
            {
                "name": "action_type",
                "type": "enum('created','upgraded')",
                "nullable": false
            },
            {
                "name": "script_name",
                "type": "varchar(255)",
                "nullable": false
            }
        ],
        "indexes": [
            {
                "name": "PRIMARY",
                "columns": [
                    "database_name",
                    "schema_version",
                    "action_datetime"
                ]
            }
        ],
        "triggers": [
            {
                "schema": "mod_shredder",
                "table": "schema_version_history",
                "name": "shredder_schema_version_history_before_insert",
                "time": "BEFORE",
                "event": "INSERT",
                "body": "SET NEW.action_datetime = NOW();"
            }
        ]
    }
}
