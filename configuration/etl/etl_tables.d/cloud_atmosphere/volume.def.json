{
    "table_definition": [
        {
            "$ref": "etl_tables.d/cloud_common/asset.json#/table_definition"
        }
    ],

    "source_query": {
        "records": {
            "resource_id": "raw.resource_id",
            "asset_type_id": "atype.asset_type_id",
            "account_id": "act.account_id",
            "provider_identifier": "raw.provider_volume_identifier",
            "create_time_utc": "raw.create_time_utc",
            "size": "raw.disk_gb"
        },

        "joins": [
            {
                "name": "atmosphere_raw_volume",
                "schema": "${SOURCE_SCHEMA}",
                "alias": "raw"
            },
            {
                "name": "account",
                "schema": "${SOURCE_SCHEMA}",
                "alias": "act",
                "on": "act.provider_account = raw.provider_account_number"
            },
            {
                "name": "asset_type",
                "schema": "${SOURCE_SCHEMA}",
                "alias": "atype",
                "on": "atype.asset_type = CONCAT('vol-', raw.type)"
            }
        ]
    }
}
