{
    "table_definition": {
        "name": "event_reconstructed",
        "comment": "The start and end times for cloud instances reconstructed from event data.",
        "engine": "MyISAM",
        "columns": [{
                "name": "resource_id",
                "type": "int(11)",
                "nullable": false
            },
            {
                "name": "instance_id",
                "type": "int(11)",
                "nullable": false
            },
            {
                "name": "start_time",
                "type": "datetime",
                "nullable": false
            },
            {
                "name": "start_event_id",
                "type": "int(11)",
                "nullable": false
            },
            {
                "name": "end_time",
                "type": "datetime",
                "nullable": false
            },
            {
                "name": "end_event_id",
                "type": "int(11)",
                "nullable": false
            },
            {
                "name": "last_modified",
                "type": "timestamp",
                "nullable": false,
                "default": "CURRENT_TIMESTAMP",
                "extra": "on update CURRENT_TIMESTAMP"
            }
        ],
        "indexes": [{
                "name": "PRIMARY",
                "columns": [
                    "resource_id",
                    "instance_id",
                    "start_time",
                    "start_event_id"
                ],
                "is_unique": true
            }
        ]
    }
}
