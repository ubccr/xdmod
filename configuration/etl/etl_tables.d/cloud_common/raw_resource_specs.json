{
    "#": "Record types are global to all cloud resources",

    "table_definition": {
        "name": "raw_resource_specs",
        "engine": "InnoDB",
        "comment": "Record type: accounting, administrative, derived, etc.",
        "columns": [
            {
                "name": "hostname",
                "type": "varchar(225)",
                "nullable": false
            },
            {
                "name": "resource_id",
                "type": "int(11)",
                "nullable": false,
                "comment": "Unknown = -1 for global dimensions"
            },
            {
                "name": "memory_mb",
                "type": "int(11)",
                "nullable": false,
                "comment": "Amount of memory available on the associated node."
            },
            {
                "name": "vcpus",
                "type": "int(5)",
                "nullable": false,
                "default": null,
                "comment": "Number of vcpus available on the associated node."
            },
            {
                "name": "fact_date",
                "type": "datetime",
                "nullable": false
            }
        ],
        "indexes": [
            {
                "name": "PRIMARY",
                "columns": [
                    "resource_id",
                    "hostname",
                    "memory_mb",
                    "vcpus",
                    "fact_date"
                ],
                "is_unique": true
            }
        ]
    }
}
