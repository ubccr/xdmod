{
    "#": "Record types are global to all cloud resources",

    "table_definition": {
        "name": "record_type",
        "engine": "MyISAM",
        "comment": "Record type: accounting, administrative, derived, etc.",
        "columns": [
            {
                "name": "record_type_id",
                "type": "int(11)",
                "nullable": false,
                "comment": "Unknown = -1 for global dimensions"
            },
            {
                "name": "record_type",
                "type": "varchar(64)",
                "nullable": false,
                "comment": "Short version or abbrev"
            },
            {
                "name": "display",
                "type": "varchar(256)",
                "nullable": false,
                "comment": "What to show the user"
            },
            {
                "name": "description",
                "type": "varchar(1024)",
                "nullable": true,
                "default": null
            }
        ],
        "indexes": [
            {
                "name": "PRIMARY",
                "columns": [
                    "record_type_id"
                ],
                "is_unique": true
            },
            {
                "name": "record_type",
                "columns": [
                    "record_type"
                ],
                "is_unique": true
            }
        ]
    }
}
