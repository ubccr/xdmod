{
    "type": "object",
    "description": "Cloud Accounting Record",
    "properties": {
        "instance_id": {
            "type": "string"
        },
        "event_type": {
            "$ref": "#/definitions/event_types"
        },
        "event_data": {
            "type": "string"
        },
        "public_ip": {
            "type": [ "string", "null" ]
        },
        "private_ip": {
            "type": [ "string", "null" ]
        },
        "event_time": {
            "type": "string",
            "format": "full-date",
            "description": "Instance requested start time in RFC-3339 format (YYYY-MM-DDTHH:mm:ssZ)"
        },
        "record_type": {
            "type": "string",
            "enum": [
                "ACCOUNTING",
                "DERIVED",
                "ADMINISTRATIVE"
              ]
        },
        "account": {
            "type": "string",
            "description": "Account the instance was run under."
        },
        "node_controller": {
            "type": [ "string", "null" ],
            "description": "Node Controller the instance was run on."
        },
        "image_type": {
            "type": [ "string", "null" ],
            "description": "Image the instance was started from"
        },
        "instance_type": {
            "$ref": "#/definitions/instance_type"
        },
        "root_type": {
            "type": "null"
        },
        "block_devices": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/disk"
            },
            "minItems": 0,
            "uniqueItems": true
        }
    },
    "definitions": {
        "event_types": {
            "type": "string",
            "enum": [
                "REQUEST_START",
                "START",
                "REQUEST_STOP",
                "STOP",
                "REQUEST_TERMINATE",
                "TERMINATE",
                "REQUEST_RESUME",
                "RESUME",
                "REQUEST_IP_ATTACH",
                "REQUEST_VOLUME_ATTACH",
                "VOLUME_ATTACH",
                "REQUEST_VOLUME_DETACH",
                "REQUEST_MIGRATE",
                "START_MIGRATE",
                "STOP_MIGRATE",
                "STATE_REPORT",
                "UNKNOWN",
                "SUSPEND"
            ]
        },
        "instance_type": {
            "properties": {
                "memory": {
                    "type": "integer",
                    "description": "Size in MB"
                },
                "disk": {
                    "type": "integer",
                    "description": "Size in GB"
                },
                "networkInterfaces": {
                    "type": "null",
                    "description": "Count of maximum network interfaces"
                },
                "name": {
                    "type": "string",
                    "description": "Instance Type Name"
                },
                "cpu": {
                    "type": "integer",
                    "description": "Count of Cores"
                }
            }
        },
        "disk": {
            "properties": {
                "id": {
                    "type": "string",
                    "description": "Volume Identifier"
                },
                "backing": {
                    "type": "string",
                    "enum": [
                        "ebs",
                        "instance-store"
                    ]
                },
                "size": {
                    "type": "integer",
                    "description": "Size in MB"
                },
                "attach_time": {
                    "type": "string",
                    "format": "full-date",
                    "description": "Disk attach time in RFC-3339 format (YYYY-MM-DDTHH:mm:ssZ)"
                },
                "create_time": {
                    "type": "string",
                    "format": "full-date",
                    "description": "Disk creation time in RFC-3339 format (YYYY-MM-DDTHH:mm:ssZ)"
                }
            }
        }
    }
}
