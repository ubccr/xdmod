{
    "table_definition": {
        "$ref": "../etl_tables_8.0.0.d/event_reconstructed.json#/table_definition"
    },
    "destination_record_map": {
        "cloud_resource_specs": {
            "resource_id": "resource_id",
            "hostname": "hostname",
            "vcpus": "vcpus",
            "memory_mb": "memory_mb",
            "start_date": "start_date",
            "end_date": "end_date"
        }
    },
    "source_query": {
        "records": {
            "resource_id": "r.resource_id",
            "hostname": "r.hostname",
            "vcpus": "r.vcpus",
            "memory_mb": "r.memory_mb",
            "event_date": "r.spec_date",
            "start_date": -1,
            "end_date": -1
        },
        "joins": [{
            "name": "raw_resource_specs",
            "schema": "${SOURCE_SCHEMA}",
            "alias": "r"
        }]
    },
    "state_reconstruction_fields": {
        "end_time": "end_date",
        "new_row": [
          "resource_id",
          "hostname"
        ],
        "update_row": [
          "resource_id",
          "hostname",
          "vcpus",
          "memory_mb"
        ],
        "reset_row": [
          "vcpus",
          "memory_mb"
        ],
        "order_by": [
          "resource_id DESC, hostname DESC, start_date ASC"
        ]
    }
}
